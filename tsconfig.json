{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["astro/tsconfigs/strictest"],
  "compilerOptions": {
    "lib": ["es2023", "DOM", "DOM.Iterable"], // Based on @tsconfig/node20
    "baseUrl": ".",
    "paths": {
      "@test/*": ["__test__/src/*"],
      "@mock/*": ["__mock__/*"]
    },
    "moduleDetection": "force",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "exclude": ["website", "coverage"]
}
